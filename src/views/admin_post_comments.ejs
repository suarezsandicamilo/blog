<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title><%= title %></title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="css/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <base href="/">
  </head>
  <body>
    <%- include('./navbar.ejs'); %>
    <!--  -->
    <%- include('./header.ejs'); %>
    <!--  -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="row">
            <div id="post" class="container">
              <% if (post.image !== null) { %>
                <div class="card mb-4">
                  <img class="card-img-top" src="<%= post.image %>" alt="<%= post.title %>" /></a>
                </div>
              <% } %>
              <div class="small text-muted my-3">
                <span><%= new Date(post.date).toLocaleDateString("es-cr", { dateStyle: "long" }) %>, </span>
                <span><%= new Date(post.time).toLocaleTimeString("es-cr", { hour: "2-digit", minute: "2-digit", hourCycle: "h12" }) %></span>
              </div>
              <div class="my-3">
                <span>Autor: <a href="/users/<%= post.author_id %>/show_posts"><%= author.username %></a></span>
              </div>
              <div class="my-3">
                <h2><%= post.summary %></h2>
              </div>
              <div class="my-3">
                <p><%= post.text %></p>
              </div>
            </div>
            <div id="comments" class="container">
              <% comments.comments.forEach(comment => { %>
                <%- include('./admin_comment.ejs', { post_id: comment.post_id, id: comment.id, user_id: comment.user_id, text: comment.text, author: comment.author }) %>
              <% }) %>
            </div>         
            <!--  -->
          </div>
        </div>
      </div>
    </div>
    <footer class="py-5 bg-dark">
      <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
    <script src="../js/navbar.js"></script>
    <script src="../js/delete_comment.js"></script>
  </body>
</html>
