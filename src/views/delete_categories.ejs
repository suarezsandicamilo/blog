<div class="card mb-4">
  <div class="card-header">Categor√≠as</div>
  <div class="card-body">
    <div class="row">
        <% categories.categories.forEach((category, index) => { %>
          <% if (index % 2 === 0) { %>
            <div class="col-sm-6">
              <ul class="list-unstyled mb-0">
                <% } %>
                  <li>
                    <div class="card-body">
                      <h2 class="card-title h4"><a href="/view/categories/<%= category.id %>"><%= category.name %></a></h2>
                        <button class="delete-category-button btn btn-primary" data-category-id="<%= category.id %>">Eliminar categoria</button>
                    </div>
                  </li>
                <% if (index % 2 !== 0 || index === categories.categories.length - 1) { %>
              </ul>
            </div>
          <% } %>
        <% }) %>
    </div>
  </div>
</div>
