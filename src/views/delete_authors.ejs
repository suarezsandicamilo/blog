<div class="card mb-4">
  <div class="card-header">Autores</div>
  <div class="card-body">
    <div class="row">
        <% authors.users.forEach((user, index) => { %>
          <% if (index % 2 === 0) { %>
            <div class="col-sm-6">
              <ul class="list-unstyled mb-0">
                <% } %>
                  <li>
                    <div class="card-body">
                      <a href="/users/<%= user.id %>/show_posts"><%= user.username %></a>
                      <button class="delete-user-button btn btn-primary" data-user-id="<%= user.id %>">Eliminar User</button>
                    </div>
                  </li>
                <% if (index % 2 !== 0 || index === authors.users.length - 1) { %>
              </ul>
            </div>
          <% } %>
        <% }) %>
    </div>
  </div>
</div>
